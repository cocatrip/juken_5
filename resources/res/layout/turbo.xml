<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <TextView android:textSize="30dp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/judul" android:background="#f0f0f1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Turbo"/>
    <RelativeLayout android:background="@drawable/merahputih2" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/imageview1" android:layout_width="wrap_content" android:layout_height="220dp" android:layout_marginTop="3dp" android:src="@drawable/turbo" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
        <ScrollView android:id="@+id/ScrollView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="15dp" android:layout_below="@+id/imageview1">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/q" android:layout_width="match_parent" android:layout_height="wrap_content"> //ini TPS Start\10
                <Spinner android:id="@+id/tps_start" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_alignParentRight="true"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TPS START (%): " android:layout_alignBottom="@+id/tps_start" android:layout_alignParentLeft="true"/> //ini RPM START\10
                <Spinner android:id="@+id/rpm_start" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/tps_start" android:layout_alignRight="@+id/tps_start"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RPM START" android:layout_alignLeft="@+id/a" android:layout_alignBottom="@+id/rpm_start"/> //ini STATUS\10
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="center" android:id="@+id/status" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="" android:layout_below="@+id/rpm_start" android:layout_alignRight="@+id/tps_start"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="STATUS" android:layout_alignBaseline="@+id/status" android:layout_alignLeft="@+id/a"/>
                <Button android:textSize="25dp" android:id="@+id/enable" android:background="@drawable/tombol_kuning" android:layout_width="130dp" android:layout_height="40dp" android:layout_marginTop="10dp" android:adjustViewBounds="false" android:text="ON" android:layout_below="@+id/status" android:layout_alignParentRight="true"/>
                <Button android:textSize="25dp" android:id="@+id/disable" android:background="@drawable/tombol_kuning" android:layout_width="130dp" android:layout_height="40dp" android:layout_marginTop="10dp" android:adjustViewBounds="false" android:text="OFF" android:layout_below="@+id/status" android:layout_alignLeft="@+id/a"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
