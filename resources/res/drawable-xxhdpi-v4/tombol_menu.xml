<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#ffcc00"/>
            <gradient android:startColor="#ffcc00" android:endColor="#ffcc00" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#ffcc00"/>
            <solid android:color="#ffcc00"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#cbcbb0"/>
            <gradient android:startColor="#cbcbb0" android:endColor="#cbcbb0" android:angle="-90"/>
        </shape>
    </item>
</selector>
