<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <TextView android:textSize="30dp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/judul" android:background="#f0f0f1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Maintenance"/>
    <RelativeLayout android:background="@drawable/merahputih2" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/imageview1" android:layout_width="wrap_content" android:layout_height="190dp" android:layout_marginTop="3dp" android:src="@drawable/maintenance" android:scaleType="fitXY" android:layout_centerHorizontal="true"/> //ini MAINTENANCE\10
        <ScrollView android:id="@+id/ScrollView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/imageview1">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/q" android:layout_width="match_parent" android:layout_height="wrap_content"> //ini Duration\10
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/dur" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:text="Duration (Minute) : " android:layout_alignParentLeft="true"/>
                <EditText android:id="@+id/et_duration" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="1" android:maxLength="3" android:layout_toRightOf="@+id/dur" android:layout_alignBaseline="@+id/dur" android:inputType="none|number|numberSigned|numberDecimal" android:textCursorDrawable="@null" android:backgroundTint="@android:color/secondary_text_light_nodisable"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/speed" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Speed (RPM) : " android:layout_below="@+id/dur" android:layout_alignLeft="@+id/dur"/>
                <Spinner android:gravity="center" android:id="@+id/et_speed" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_toRightOf="@+id/speed" android:layout_alignTop="@+id/speed"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/on_duty" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="ON - Duty Cycle : " android:layout_below="@+id/speed" android:layout_alignLeft="@+id/dur"/>
                <EditText android:id="@+id/et_on_duty" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="1" android:maxLength="3" android:layout_toRightOf="@+id/on_duty" android:layout_alignBaseline="@+id/on_duty" android:inputType="none|number|numberSigned|numberDecimal" android:textCursorDrawable="@null" android:backgroundTint="@android:color/secondary_text_light_nodisable"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/time" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="TIME : " android:layout_below="@+id/on_duty" android:layout_alignLeft="@+id/dur"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/et_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="20dp" android:text="2:0:0" android:layout_toRightOf="@+id/time" android:layout_alignBaseline="@+id/time"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/counter" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Counter : " android:layout_below="@+id/time" android:layout_alignLeft="@+id/dur"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/et_counter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="20dp" android:text="1023" android:layout_toRightOf="@+id/counter" android:layout_alignBaseline="@+id/counter"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="right" android:id="@+id/bat" android:layout_width="170dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="V-Battery : " android:layout_below="@+id/counter" android:layout_alignLeft="@+id/dur"/>
                <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/et_bat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="20dp" android:text="11.3V" android:layout_toRightOf="@+id/bat" android:layout_alignBaseline="@+id/bat"/> //ini start\10
                <Button android:textSize="22dp" android:id="@+id/start" android:background="@drawable/tombol_kuning" android:layout_width="130dp" android:layout_height="35dp" android:layout_marginTop="5dp" android:adjustViewBounds="false" android:text="START" android:layout_below="@+id/bat" android:layout_alignParentLeft="true"/> //ini stop\10
                <Button android:textSize="22dp" android:id="@+id/stop" android:background="@drawable/tombol_kuning" android:layout_width="130dp" android:layout_height="35dp" android:adjustViewBounds="false" android:text="STOP" android:layout_alignBottom="@+id/start" android:layout_alignParentRight="true"/>
                <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/start">
                    <TextView android:textSize="20dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tutorial" android:background="#07000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="!! WARNING !!\10 JANGAN LUPA MELEPAS INJECTOR" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
                </HorizontalScrollView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
